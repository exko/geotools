    <dependency>
      <artifactId>defaultcore</artifactId>
      <groupId>gt2</groupId>
      <version>0.1</version>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
