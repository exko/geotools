    <dependency>
      <artifactId>resources</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B4</version>
    </dependency>
    <dependency>
      <id>opengis+css</id>
      <version>0.1</version>
      <url>http://www.opengis.org</url>
    </dependency>
    <dependency>
      <id>defaultcore</id>
      <groupId>gt2</groupId>
      <version>2.0-B4</version>
      <url>http://www.geotools.org</url>
    </dependency>
    <dependency>
      <id>data</id>
      <groupId>gt2</groupId>
      <version>2.0-B4</version>
      <url>http://www.geotools.org</url>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/tests/unit</directory>
        </resource>
      </resources>
    </unitTest>
  </build>
