<?xml version="1.0" encoding="utf-8"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/../../project.xml</extend>
  <name>geotools-data</name>
  <id>data</id>
  <currentVersion>2.0-B3-DEV</currentVersion>
  <versions>
    <version>
      <id>b1</id>
      <name>2.0-b1</name>
      <tag>GT_2_0_B1</tag>
    </version>
  </versions>
  <package>org.geotools</package>
  <shortDescription>Interfaces and Helper implementations for
  importing data.</shortDescription>
  <gumpRepositoryId>geotools</gumpRepositoryId>
  <description>This module contains all interfaces for importing
  data into geotools. The new DataStore and FeatureReader/Writer
  model here replaces the old DataSource of core. This module also
  has the abstract and default implementations that individual data
  stores should base themselves on.</description>
  <developers>
    <developer>
      <name>Chris Holmes</name>
      <id>cholmesny</id>
      <email>cholmesny@users.sourceforge.net</email>
      <organization>TOPP</organization>
      <roles>
        <role>Module Maintainer</role>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Sean Geoghegan</name>
      <id>seangeo</id>
      <email>seangeo@users.sourceforge.net</email>
      <organization>Defence Science and Technology
      Organization</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Jody Garnett</name>
      <id>jive</id>
      <email>jive@users.sourceforge.net</email>
      <organization>Refractions</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
    <developer>
      <name>Ian Schneider</name>
      <id>en</id>
      <email>ianschneiderw@ars.usda.gov</email>
      <organization>USDA/ARS</organization>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>
  <dependencies>
    <dependency>
      <artifactId>core</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B3-DEV</version>
    </dependency>
    <dependency>
      <id>JTS</id>
      <version>1.4</version>
      <url>http://www.vividsolutions.com/JTS/jts_frame.htm</url>
      <properties>
        <release.bundle>true</release.bundle>
      </properties> 
    </dependency>
    <dependency>
      <artifactId>cts-coordtrans</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B3-DEV</version>
    </dependency>
    <dependency>
      <id>opengis</id>
      <version>2.0-B3-DEV</version>
      <url>http://www.geotools.org</url>
    </dependency>
    <dependency>
      <id>vecmath</id>
      <version>1.2.1</version>
      <url>http://java.sun.com/products/java-media/3D/</url>
      <properties>
        <release.bundle>true</release.bundle>
      </properties>  
    </dependency>
    <dependency>
      <artifactId>defaultcore</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B3-DEV</version>
      <type>test</type>
    </dependency>
    <dependency>
      <artifactId>resources</artifactId>
      <groupId>gt2</groupId>
      <version>2.0-B3-DEV</version>
      <type>test</type>
    </dependency>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <type>test</type>
      <url>http://junit.org/</url>
    </dependency>
    <dependency>
      <id>mockrunner</id>
      <version>0.2</version>
      <type>test</type>
      <url>http://mockrunner.sourceforge.net/</url>
    </dependency>
  </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/tests/unit</directory>
          <includes>
            <include>testData/</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
