<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="gtbuild">

<!-- Allow any user specific values to override the defaults -->
<property file="${user.home}/build.properties"/>
<!-- Allow user defaults for this project -->
<property file="build.properties"/>
<!-- Allow meta-project defaults for this project -->
<property file="../gtbuild/build.properties"/>
<!-- Set default values for the build -->
<property file="project.properties"/>
    <!-- once the reactor in maven is ready, this file will no longer be needed -->
    
    <target depends="install,sites" name="all">
        <!-- WRITEME -->
    </target>
    
    <target name="install">
        <ant antfile="build-maven.xml" dir="..\core" inheritall="true" target="maven:install-jar"/>
        <ant antfile="build-maven.xml" dir="..\filter" inheritall="true" target="maven:install-jar"/>
        <ant antfile="build-maven.xml" dir="..\defaultcore" inheritall="true" target="maven:install-jar"/>
    </target>
    
    <target name="sites">
        <ant antfile="build-maven.xml" dir="..\core" inheritall="true" target="maven:site"/>
        <ant antfile="build-maven.xml" dir="..\filter" inheritall="true" target="maven:site"/>
        <ant antfile="build-maven.xml" dir="..\defaultcore" inheritall="true" target="maven:site"/>
    </target>
    
    
    <target name="extractDocuments">
        <copy todir="../../modulePages">
            <fileset dir=".." includes="*/target/docs/**"/>
        </copy>
    </target>
</project>
