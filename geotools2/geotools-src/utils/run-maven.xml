<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="all" name="maven shortcuts">
    <property file="..\account.properties"/>
    <target name="test">
        
        <exec executable="maven.bat">
          <arg value="test"/> 
        </exec>
    </target>
    
    <target name="site">
        <exec executable="maven.bat">
          <arg value="site"/> 
        </exec>
    </target>
    
    <target name="compile">
        <exec executable="maven.bat">
          <arg value="java:compile"/> 
        </exec>
    </target>
    
    <target name="clean">
        <exec executable="maven.bat">
          <arg value="clean"/> 
        </exec>
    </target>
    
    <target name="install">
        <exec executable="maven.bat">
          <arg value="jar:install"/> 
        </exec>
    </target>
    
    <target name="jar:deploy">
        <exec executable="maven.bat">
          <arg value="jar:deploy"/> 
          <arg value="-Dmaven.username=${maven.username}"/>
          <arg value="-Dmaven.repo.central=geotools.org"/>
          <arg value="-Dmaven.repo.central.directory=/home/groups/g/ge/geotools/htdocs"/>
        </exec>
    </target>
    
    
    
    <target name="goals">
        <exec executable="maven.bat">
          <arg value="-g"/> 
        </exec>
    </target>
    
    <target name="release">
        <exec executable="maven.bat">
          <arg value="release"/> 
        </exec>
    </target>
</project>
