<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<!--
			declare here the namespaces and prefixes used by the parser to
			resolve <type> elements.
		-->
		<Namespace>
			<prefix>gsml</prefix>
			<uri>http://www.cgi-iugs.org/xml/GeoSciML/2</uri>
		</Namespace>
		<Namespace>
			<prefix>gml</prefix>
			<uri>http://www.opengis.net/gml</uri>
		</Namespace>
		<Namespace>
			<prefix>xlink</prefix>
			<uri>http://www.w3.org/1999/xlink</uri>
		</Namespace>
		<Namespace>
			<prefix>sa</prefix>
			<uri>http://www.opengis.net/sampling/1.0</uri>
		</Namespace>
		<Namespace>
			<prefix>om</prefix>
			<uri>http://www.opengis.net/om/1.0</uri>
		</Namespace>
		<Namespace>
			<prefix>cv</prefix>
			<uri>http://www.opengis.net/cv/0.2.1</uri>
		</Namespace>
		<Namespace>
			<prefix>swe</prefix>
			<uri>http://www.opengis.net/swe/1.0.1</uri>
		</Namespace>
		<Namespace>
			<prefix>sml</prefix>
			<uri>http://www.opengis.net/sensorML/1.0.1</uri>
		</Namespace>
	</namespaces>   
	<sourceDataStores>
		<DataStore>
			<id>GeologicUnit</id>
			<parameters>
				<Parameter>
					<name>directory</name>
					<!-- path can be relative to this file if starts with "file: -->
					<value>file:./</value>
				</Parameter>
			</parameters>
		</DataStore>
	</sourceDataStores>
	<catalog>mappedPolygons.oasis.xml</catalog>
	<targetTypes>
		<FeatureType>
			<!--
				State the needed xsd schemas to be loaded in order to make the
				schema-to-FeatureModel parse. Paths are relative to this file, or
				may be absolute URL's. Imports and includes at the schemas will be
				followed as long as they're relative paths.
			-->
			<schemaUri>http://schemas.opengis.net/GeoSciML/geosciml.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
		    <!-- test mappingName won't break getFeature request for top level feature -->		   
			<sourceDataStore>GeologicUnit</sourceDataStore>
			<sourceType>Nillable</sourceType>
			<targetElement>gsml:GeologicUnit</targetElement>			
			<attributeMappings>
				<AttributeMapping>
					<targetAttribute>
                        gsml:GeologicUnit
					</targetAttribute>
					<idExpression>
						<OCQL>strConCat('gsml.geologicunit.',geologicunit_id)</OCQL>
					</idExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>
                        gml:name
					</targetAttribute>
					<sourceExpression>
						<OCQL>name_value</OCQL>						
					</sourceExpression>
					<ClientProperty>
						<name>codeSpace</name>
						<value>name_codespace</value>
					</ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gsml:bodyMorphology</targetAttribute>
					<targetAttributeNode>gsml:CGI_TermValuePropertyType</targetAttributeNode>
				</AttributeMapping>				
				<AttributeMapping>
					<targetAttribute>
                       gsml:bodyMorphology/gsml:CGI_TermValue/gsml:value
					</targetAttribute>
					<sourceExpression>
						<OCQL>body_value</OCQL>						
					</sourceExpression>	
					<ClientProperty>
						<name>codeSpace</name>
						<value>body_codespace</value>
					</ClientProperty>						
				</AttributeMapping>	
				<AttributeMapping>
					<targetAttribute>
                       gsml:composition/gsml:CompositionPart/gsml:lithology/gsml:ControlledConcept/gml:name
					</targetAttribute>
					<sourceExpression>
						<OCQL>'compositionName'</OCQL>      
					</sourceExpression> 
				</AttributeMapping> 
				<AttributeMapping>
					<targetAttribute>
                       gsml:composition/gsml:CompositionPart/gsml:lithology[2]/gsml:ControlledConcept/gml:name
					</targetAttribute>
					<sourceExpression>
						<OCQL>body_value</OCQL>      
					</sourceExpression> 
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>
                       gsml:preferredAge
					</targetAttribute>		
					<ClientProperty>
						<name>xlink:href</name>
						<value>'urn:ogc:def:nil:OGC:1.0:missing'</value>
					</ClientProperty>					
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>
                       gsml:rank
					</targetAttribute>
					<sourceExpression>
						<OCQL>body_value</OCQL>						
					</sourceExpression>	
					<ClientProperty>
						<name>codeSpace</name>
						<value>body_codespace</value>
					</ClientProperty>	
				</AttributeMapping>
			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
